<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>PLG_CFI</name>
    <version>2.0.0</version>
    <creationDate>10.10.2025</creationDate>
    <author>Aleksey A. Morozov, Sergey Tolkachyov</author>
    <authorEmail>info@web-tolk.ru</authorEmail>
    <authorUrl>https://web-tolk.ru</authorUrl>
    <copyright>Copyright (c) 2025 Aleksey A. Morozov, Sergey Tolkachyov. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see http://www.gnu.org/licenses/gpl-3.0.txt</license>
    <description>PLG_CFI_DESC</description>
    <namespace path="src">Joomla\Plugin\System\Cfi</namespace>
    <scriptfile>script.php</scriptfile>
    <php_minimum>8.1</php_minimum>
    <files>
        <folder>layouts</folder>
        <folder>services</folder>
        <folder plugin="cfi">src</folder>
    </files>
    <media destination="plg_system_cfi" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    <languages folder="language">
        <language tag="en-GB">en-GB/plg_system_cfi.ini</language>
        <language tag="en-GB">en-GB/plg_system_cfi.sys.ini</language>
        <language tag="ru-RU">ru-RU/plg_system_cfi.ini</language>
        <language tag="ru-RU">ru-RU/plg_system_cfi.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field type="list"
                       name="article_fields"
                       label="article_fields"
                       description="article_fields_desc"
                       layout="joomla.form.field.list-fancy-select"
                       multiple="true"
                       default='{"0":"id","1":"title","2":"lang","3":"introtext","4":"fulltext"}'
                >
                    <option value="id">id</option>
                    <option value="asset_id">asset_id</option>
                    <option value="title">title</option>
                    <option value="alias">alias</option>
                    <option value="introtext">introtext</option>
                    <option value="fulltext">fulltext</option>
                    <option value="state">state</option>
                    <option value="cat">catid</option>
                    <option value="created">created</option>
                    <option value="created_by">created_by</option>
                    <option value="created_by_alias">created_by_alias</option>
                    <option value="modified">modified</option>
                    <option value="modified_by">modified_by</option>
                    <option value="checked_out">checked_out</option>
                    <option value="checked_out_time">checked_out_time</option>
                    <option value="publish_up">publish_up</option>
                    <option value="publish_down">publish_down</option>
                    <option value="images">images</option>
                    <option value="urls">urls</option>
                    <option value="attribs">attribs</option>
                    <option value="version">version</option>
                    <option value="ordering">ordering</option>
                    <option value="metakey">metakey</option>
                    <option value="metadesc">metadesc</option>
                    <option value="access">access</option>
                    <option value="hits">hits</option>
                    <option value="metadata">metadata</option>
                    <option value="featured">featured</option>
                    <option value="lang">language</option>
                    <option value="featured_up">featured_up</option>
                    <option value="featured_down">featured_down</option>
                    <option value="category_title">category_title</option>
                    <option value="category_alias">category_alias</option>
                    <option value="category_access">category_access</option>
                    <option value="category_language">category_language</option>
                    <option value="author">author</option>
                    <option value="parent_title">parent_title</option>
                    <option value="parent_id">parent_id</option>
                    <option value="parent_route">parent_route</option>
                    <option value="parent_alias">parent_alias</option>
                    <option value="parent_language">parent_language</option>
                    <option value="rating">rating</option>
                    <option value="rating_count">rating_count</option>
                    <option value="params">params</option>
                </field>
                <field type="radio"
                       name="use_custom_fields"
                       label="use_custom_fields"
                       layout="joomla.form.field.radio.switcher"
                       default="1"
                       >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field type="radio"
                       name="use_tags"
                       label="use_tags"
                       layout="joomla.form.field.radio.switcher"
                       default="0"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="cp" type="list" label="PLG_CFI_PARAM_CP" default="CP1251">
                    <option value="7bit">7bit</option>
                    <option value="8bit">8bit</option>
                    <option value="ArmSCII-8">ArmSCII-8</option>
                    <option value="ASCII">ASCII</option>
                    <option value="BASE64">BASE64</option>
                    <option value="BIG-5">BIG-5</option>
                    <option value="byte2be">byte2be</option>
                    <option value="byte2le">byte2le</option>
                    <option value="byte4be">byte4be</option>
                    <option value="byte4le">byte4le</option>
                    <option value="CP866">CP866</option>
                    <option value="CP936">CP936</option>
                    <option value="CP950">CP950</option>
                    <option value="CP1250">CP1250</option>
                    <option value="CP1251">CP1251</option>
                    <option value="CP1252">CP1252</option>
                    <option value="CP932">CP932</option>
                    <option value="CP50220">CP50220</option>
                    <option value="CP50220raw">CP50220raw</option>
                    <option value="CP50221">CP50221</option>
                    <option value="CP50222">CP50222</option>
                    <option value="CP51932">CP51932</option>
                    <option value="EUC-JP">EUC-JP</option>
                    <option value="eucJP-win">eucJP-win</option>
                    <option value="EUC-CN">EUC-CN</option>
                    <option value="EUC-KR">EUC-KR</option>
                    <option value="EUC-TW">EUC-TW</option>
                    <option value="GB18030">GB18030</option>
                    <option value="HTML-ENTITIES">HTML-ENTITIES</option>
                    <option value="HZ">HZ</option>
                    <option value="ISO-2022-KR">ISO-2022-KR</option>
                    <option value="ISO-2022-JP">ISO-2022-JP</option>
                    <option value="ISO-2022-JP-MS">ISO-2022-JP-MS</option>
                    <option value="ISO-2022-JP-KDDI">ISO-2022-JP-KDDI</option>
                    <option value="ISO-8859-1">ISO-8859-1</option>
                    <option value="ISO-8859-2">ISO-8859-2</option>
                    <option value="ISO-8859-3">ISO-8859-3</option>
                    <option value="ISO-8859-4">ISO-8859-4</option>
                    <option value="ISO-8859-5">ISO-8859-5</option>
                    <option value="ISO-8859-6">ISO-8859-6</option>
                    <option value="ISO-8859-7">ISO-8859-7</option>
                    <option value="ISO-8859-8">ISO-8859-8</option>
                    <option value="ISO-8859-9">ISO-8859-9</option>
                    <option value="ISO-8859-10">ISO-8859-10</option>
                    <option value="ISO-8859-13">ISO-8859-13</option>
                    <option value="ISO-8859-14">ISO-8859-14</option>
                    <option value="ISO-8859-15">ISO-8859-15</option>
                    <option value="ISO-8859-16">ISO-8859-16</option>
                    <option value="JIS">JIS</option>
                    <option value="JIS-ms">JIS-ms</option>
                    <option value="KOI8-R">KOI8-R</option>
                    <option value="KOI8-U">KOI8-U</option>
                    <option value="SJIS">SJIS</option>
                    <option value="SJIS-win">SJIS-win</option>
                    <option value="UCS-2">UCS-2</option>
                    <option value="UCS-2BE">UCS-2BE</option>
                    <option value="UCS-2LE">UCS-2LE</option>
                    <option value="UCS-4">UCS-4</option>
                    <option value="UCS-4BE">UCS-4BE</option>
